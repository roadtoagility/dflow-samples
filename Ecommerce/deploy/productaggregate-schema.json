{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://roadtoagility.net/product-aggregate.schema.json",
  "title": "ProductAggregationRoot",
  "type": "object",
  "properties": {
    "eventType": {
      "type": "string"
    },
    "eventProcessingTimeMs": {
      "type": "long"
    },
    "payload": {
      "type": "object",
      "anyOf":[
        {
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "weight": {
              "type": "double"
            }
          },
          "required": [ "name", "description","weight" ]
        }
      ] 
    }
  },
  "required": [ "eventType", "eventProcessingTimeMs","payload" ]
}
